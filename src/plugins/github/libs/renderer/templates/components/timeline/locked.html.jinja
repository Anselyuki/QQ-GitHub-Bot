{% from "icons/lock.html.jinja" import octicon_lock %}

{% macro locked(event, ns) %}
<div class="TimelineItem">
  <div class="TimelineItem-badge color-fg-on-emphasis color-bg-on-emphasis">
    {{ octicon_lock() }}
  </div>
  <div class="TimelineItem-body">
    <a class="d-inline-block">
      <img
        class="avatar avatar-user"
        height="20"
        width="20"
        src="{{ event.actor.avatar_url }}"
      />
    </a>
    <a class="author Link--primary text-bold">
      {{ event.actor.login|escape }}
    </a>
    locked
    {% if event.lock_reason %}
    as
    <strong>{{ event.lock_reason|escape }}</strong>
    {% endif %}
    and limited conversation to collaborators
    <a class="Link--secondary">{{ event.created_at|relative_time }}</a>
  </div>
</div>
{% endmacro %}
